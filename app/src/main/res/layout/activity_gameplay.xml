<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameplayActivity">

    <Button
        android:id="@+id/buttonGuess8"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:onClick="onClickDigit"
        android:tag="Guess8"
        android:text="8"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/buttonGuess7"
        app:layout_constraintTop_toTopOf="@+id/buttonGuess7" />

    <Button
        android:id="@+id/buttonGuess7"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickDigit"
        android:tag="Guess7"
        android:text="7"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGuess4" />

    <Button
        android:id="@+id/buttonGuess9"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:onClick="onClickDigit"
        android:tag="Guess9"
        android:text="9"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/buttonGuess8"
        app:layout_constraintTop_toTopOf="@+id/buttonGuess7" />

    <Button
        android:id="@+id/buttonGuess5"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:onClick="onClickDigit"
        android:tag="Guess5"
        android:text="5"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/buttonGuess4"
        app:layout_constraintTop_toTopOf="@+id/buttonGuess4" />

    <Button
        android:id="@+id/buttonGuess4"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:onClick="onClickDigit"
        android:tag="Guess4"
        android:text="4"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonGuess1" />

    <Button
        android:id="@+id/buttonGuess6"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:onClick="onClickDigit"
        android:tag="Guess6"
        android:text="6"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/buttonGuess5"
        app:layout_constraintTop_toTopOf="@+id/buttonGuess4" />

    <Button
        android:id="@+id/buttonGuess3"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:onClick="onClickDigit"
        android:tag="Guess3"
        android:text="3"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/buttonGuess2"
        app:layout_constraintTop_toTopOf="@+id/buttonGuess1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Kakuro"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <view
        android:id="@+id/viewPlayGrid"
        class="game.paulgross.kakuroplaystore.GameplayActivity$PlayingGridView"
        android:layout_width="340dp"
        android:layout_height="340dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <Button
        android:id="@+id/buttonGuess1"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:onClick="onClickDigit"
        android:tag="Guess1"
        android:text="1"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewPlayGrid" />

    <Button
        android:id="@+id/buttonGuess2"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="8dp"
        android:onClick="onClickDigit"
        android:tag="Guess2"
        android:text="2"
        android:textSize="34sp"
        app:layout_constraintStart_toEndOf="@+id/buttonGuess1"
        app:layout_constraintTop_toTopOf="@+id/buttonGuess1" />

</androidx.constraintlayout.widget.ConstraintLayout>